.main
	position: relative
	display: block
	padding: 7px 5px
	width: 95vw
	margin: 0 auto
	&__view
		width: 100%
		margin: 0 auto
		& h1
			font-weight: 300
			text-align: center
		@media screen and (max-width: 560px)
			font-size: .8em !important
			font-weight: 400

.loader
	position: absolute
	background: white
	width: 100%
	height: 100%
	z-index: 20
	&__spinner
		position: inherit
		z-index: 20
		left: 45vw
		top: 40vh
		height: 72px
		width: 72px


